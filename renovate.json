{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageManager": "yarn@4.2.2", // lock to your Yarn version
  "yarnWorkspaces": true, // enable workspace-wide updates
  "timezone": "America/New_York", // run in your local time
  "schedule": ["before 5am on monday"] // avoid surprise PRs during office hours
}
