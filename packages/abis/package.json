{
  "name": "@relay-protocol/abis",
  "version": "1.0.2",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "release": "npm publish",
    "clean": "rm -rf src dist",
    "build:contracts": "yarn workspace @relay-protocol/smart-contracts build",
    "build:export-abis": "yarn workspace @relay-protocol/smart-contracts build:abis",
    "build:merge-abis": "NODE_NO_WARNINGS=1 ts-node --transpile-only bin/mergeAbi.ts",
    "build:create-index": "NODE_NO_WARNINGS=1 ts-node --transpile-only bin/createIndex.ts",
    "build:ts": "tsup src/index.ts --dts --format esm,cjs",
    "build": "yarn build:contracts && yarn build:export-abis && yarn build:merge-abis && yarn build:create-index && yarn build:ts",
    "lint:fix": "yarn lint --fix",
    "lint": "eslint"
  },
  "devDependencies": {
    "@relay-protocol/helpers": "^workspace:*",
    "@relay-protocol/networks": "1.1.1",
    "@types/node": "20.11.30",
    "ts-node": "10.9.2",
    "tsup": "8.4.0",
    "typescript": "5.8.3"
  },
  "files": [
    "abis",
    "index.js",
    "dist"
  ]
}